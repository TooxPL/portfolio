{
    "compilerOptions": {
        "outDir": "./dist/js",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise"
        ],
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "plugins": [{ "name": "ts-vue-plugin" }],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}